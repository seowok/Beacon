<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/frag_roomservice_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.27"
            android:background="@drawable/roomservice"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/frag_light_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/lightonoff"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/frag_morningcall_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/morningcall"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/frag_lobby_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/lobby"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/frag_cleaning_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/cleaning"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/frag_replacement_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/replacement"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
        />
    </LinearLayout>
</LinearLayout>
