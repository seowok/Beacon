<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background5">

    <ImageView
        android:id="@+id/smart_key"
        android:src="@drawable/card_background"
        android:layout_width="225dp"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/smart_key_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:background="@drawable/border_circle_background"
        android:src="@drawable/lock_close"
        app:layout_constraintTop_toTopOf="@id/smart_key"
        app:layout_constraintBottom_toBottomOf="@id/smart_key"
        app:layout_constraintLeft_toLeftOf="@id/smart_key"
        app:layout_constraintRight_toRightOf="@id/smart_key"/>

    <TextView
        android:id="@+id/room_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000호"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@id/smart_key"
        app:layout_constraintLeft_toLeftOf="@id/smart_key" />
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조원근님"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@id/smart_key"
        app:layout_constraintLeft_toRightOf="@id/room_num" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체크 인"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/room_num"
        app:layout_constraintLeft_toLeftOf="@+id/room_num"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="체크 아웃"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/room_num"
        app:layout_constraintLeft_toLeftOf="@+id/room_num"/>

    <TextView
        android:id="@+id/check_in_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017년 6월 10일"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/room_num"
        app:layout_constraintRight_toRightOf="@id/smart_key"/>

    <TextView
        android:id="@+id/check_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017년 6월 13일"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/room_num"
        app:layout_constraintRight_toRightOf="@id/smart_key"/>


</android.support.constraint.ConstraintLayout>